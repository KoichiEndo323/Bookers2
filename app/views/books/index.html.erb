    <%= @book.errors.count %> errors prohibited this obj from being saved
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<div class="container px-5 px-sm-0 ">
 <div class="row">
  <div class="col-md-3">
   <h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table class="table">
  <tbody>
   <tr></tr>
   <tr>
    <th>name</th>
    <th><%= @user.name %></th>
   </tr>
   <tr>
    <th>intoroduction</th>
    <th><%= @user.introduction %></th>
   </tr>
   </tbody>
  </table>
</div>

<div class="row">
<p><%= link_to raw('<i class="fas fa-user-cog"></i>'), edit_user_path(@user), { class: "btn btn-outline-secondary btn-block current_user" } %></p>
</div>

 <h2 class="mt-3">New book</h2>
  <%= form_with model: @book do |f| %>
    <label>Title</label><br>
    <%= f.text_field :title %><br>
    <label>Opinion</label><br>
    <%= f.text_area :body %><br>
   <%= f.submit 'Create Book', class: 'btn btn-success' %>
  <% end %>
  </div>

<div class="col-md-8 offset-md-1">
 <h2>Books</h2>
  <table class="table">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
     <tr>
      <td><%= link_to image_tag(book.user.get_profile_image(80,80)), user_path(book.user) %></td>
      <td><%= link_to "#{book.title}",book_path(book) %></td>
      <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

</div>
</div>
</div>