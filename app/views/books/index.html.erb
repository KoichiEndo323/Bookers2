<div><%= flash[:notice] %></div>

<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h1>User info</h1>
<% @books.each do |book| %>
<div>
  <p><%= image_tag book.user.get_profile_image(100,100) %></p>
  <p><%= book.user.name %></p>
  <p><%= link_to book.title, book_path(book) %></p>
  <p>Opinionï¼š<%= book.body %></p>

</div>
<% end %>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>
