<div class="containar px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <table class="table">
  <tbody>
   <tr></tr>
   <tr>
    <th>name</th>
    <th><%= @user.name %></th>
   </tr>
   <tr>
    <th>intoroduction</th>
    <th><%= @user.introduction %></th>
   </tr>
  </table>
</div>
<div class="row">
<p><%= link_to "プロフィール編集", edit_user_path(@user),class:"btn btn-outline-secondary btn-block current_user" %></p>
</div>
 <h2 class="mt-3">New book</h2>
  <%= form_with model: @book do |f| %>
    <label>Title</label><br>
    <%= f.text_field :title %><br>
    <label>Opinion</label><br>
    <%= f.text_area :body %><br>
   <%= f.submit 'Create Book', class: 'btn btn-success' %>
  <% end %>
  </div>


<div class="col-md-8 offset-md-1">
 <h2>Books</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
   <tr><%= image_tag book.user.get_profile_image(80,80) %></tr>
    <tr>
     <th><%= book.title %></th>
    </tr>
    <tr>
     <th><%= book.body %></th>
    </tr>
   </tbody>
  </table>
<% end %>
</div>
</div>
</div>