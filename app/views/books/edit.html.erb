<h2>Editing Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book do |f| %>
  <label for="inputTitle">Name</label><br>
  <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"タイトル"%><br>
  <label for="inputBody">Opinion</label><br>
  <%=f.text_area :body, autofocus: true, id:"inputBody", placeholder:"本文" %><br>
  <%= f.submit "Update Book" %>
<% end %>

