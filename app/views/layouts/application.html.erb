<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class＝"shadow-sm">
      <nav class="navbar navbar-expand-ml navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand p-3" href="/"><span>Bookers</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
           <ul class="navbar-nav ml-auto">
            <a class="nav-link text-light" href="/"><i class="fas fa-home"></i>Home</a>
            <% if user_signed_in? %>
            <li class="nav-item">
            <%= link_to raw('<i class="fas fa-users"></i> Users'), users_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
            <%= link_to raw('<i class="fas fa-book-open"></i> Books'), books_path, class: 'nav-link text-light' %>
            </li>
            <li class="nav-item">
            <%= link_to raw('<i class="fas fa-sign-out-alt"></i> Log out'), destroy_user_session_path, method: :delete,class: 'nav-link text-light'%>
            </li>
            <% else %>
            <li class="nav-item">
            <%= link_to raw('<i class="fas fa-link"></i> About'), about_path,class: 'nav-link text-light'%>
            </li>
            <li class="nav-item">
            <%= link_to raw('<i class="fas fa-user-plus"></i> Sign up'), new_user_registration_path,class: 'nav-link text-light'%>
            </li>
            <%= link_to raw('<i class="fas fa-sign-in-alt"></i> log in'), new_user_session_path,class: 'nav-link text-light'%>
            </li>
          　</ul>
            </div>
          　<% end %>
  </header>
  <main>
      <% if flash[:notice] %>
       <div class="alert alert-success">
        <%= flash[:notice] %>
       </div>
       <% end %>
    <%= yield %>
    </main>
  </body>

  <footer>
    <div class="container mt-5">
      <div class="row">
       <div class="mx-auto">
         <p>CopyRight Infratop.inc</p>
       </div>
      </div>
    </div>
  </footer>
</html>
